<% if notice.present? %>
  <div class="alert">
    <div class="alert alert-success"><%= notice %></div>
  </div>
<% elsif alert.present? %>
  <div class="alert">
    <div class="alert alert-danger"><%= alert %></div>
  </div>
<% end %>
<% flash.each do |message_type, message| %>
  <% if message != notice %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>
<% end %>
